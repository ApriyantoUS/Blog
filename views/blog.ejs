      <div class="container-blog">
        <div class="blog-container">
          <% for(let posted of post){ %>
          <div class="blog-card">
            <a style="text-decoration: none; color: black" href="/blog/<%= posted.id %>">
              <div class="card_1">
                <img src="<%= posted.image %>" alt="article" width="100%" />
              </div>
              <h3 style="margin-top: 5px"><%= posted.subtitle %></h3>
              <h5 style="margin-top: 5px">Author : <%= posted.author %>/ <%= posted.date %></h5>
              <h5>Category : <%= posted.category %></h5>
              <h5 style="margin-top: 10px"><%= posted.body %></h5>
            </a>
          </div>
          <% } %>
        </div>
      </div>

